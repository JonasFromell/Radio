
<div class="AudioPlayer-controls">
  <button class="Button Button--icon">
    <i class="Icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
        <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
        <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </i>
  </button>
  <button class="Button Button--icon Button--icon--large" {{action "toggle"}}>
    <i class="Icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
          <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </i>
  </button>
  <button class="Button Button--icon">
    <i class="Icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
        <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
        <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </i>
  </button>
</div>

<div class="AudioPlayer-indicators">
  {{progress-activity max=audio.duration value=audio.progress}}
</div>

<div class="AudioPlayer-controls">
  <i class="Icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
      <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
      <path d="M0 0h24v24H0z" fill="none"/>
    </svg>
  </i>
  {{volume-control value=audio.volume}}
</div>
